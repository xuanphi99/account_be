<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 7.4.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_7_4_0.dtd">

<service-builder dependency-injector="ds" package-path="com.dogoo.poc.account">
	<namespace>DG</namespace>
	<!--<entity data-source="sampleDataSource" local-service="true" name="Foo" remote-service="false" session-factory="sampleSessionFactory" table="foo" tx-manager="sampleTransactionManager uuid="true"">-->
	<entity local-service="true" name="AccountEntry" remote-service="true" uuid="true">

		<!-- PK fields -->

		<column name="accountId" primary="true" type="long" />

		<!-- Group instance -->

		<column name="groupId" type="long" />

		<!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->

		<column name="fullName" type="String" />
		<column name="email" type="String" />
		<column name="newUser" type="String" />
		<column name="password" type="String" />
		<column name="phone" type="String" />
		<column name="departmentId" type="long" />
		<column name="positionId" type="long" />
		<column name="userIdMapping" type="int" />
		<column name="roles" type="Collection" entity="CategoryEntry" mapping-table="Account_Category"/>

		<!-- Order -->

		<order by="asc">
			<order-column name="fullName" />
			<!--			<order-column name="email" />-->
			<!--			<order-column name="phone" />-->
		</order>

		<!-- Finder methods -->

		<finder name="fullName" return-type="Collection">
			<finder-column name="fullName" />
		</finder>
		<finder name="email" return-type="Collection">
			<finder-column name="email" />
		</finder>

		<!-- References -->

	</entity>

	<entity local-service="true" name="CategoryEntry" remote-service="true" uuid="true">

		<!-- PK fields -->

		<column name="categoryId" primary="true" type="long" />

		<!-- Group instance -->

		<column name="groupId" type="long" />

		<!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->

		<column name="type" type="String" />
		<column name="name" type="String" />
		<column name="code" type="int" />
		<column name="parentId" type="String" />
		<column name="accounts" type="Collection" entity="AccountEntry" mapping-table="Account_Category"/>

		<!-- Order -->

		<order by="asc">
			<order-column name="type" />

		</order>

		<!-- Finder methods -->

		<finder name="type" return-type="Collection">
			<finder-column name="type" />
		</finder>

		<finder name="code" return-type="Collection">
			<finder-column name="code" />
		</finder>
		<finder name="CodeAndType" return-type="Account_Category">
			<finder-column name="code" />
			<finder-column name="type" />
		</finder>

		<!-- References -->

	</entity>


</service-builder>